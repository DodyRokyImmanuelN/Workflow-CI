name: Heart-Disease-Classification

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data_path:
        type: string
        default: heart_preprocessing.csv
        description: "Path to preprocessed heart disease dataset"

      model_type:
        type: string
        default: RandomForest
        description: "Type of model"

      test_size:
        type: float
        default: 0.2
        description: "Test set size (0.0â€“1.0)"

      random_state:
        type: int
        default: 42
        description: "Random state for reproducibility"

      n_estimators:
        type: int
        default: 100
        description: "Number of trees in RandomForest"

      max_depth:
        type: int
        default: 10
        description: "Maximum depth of trees"

      min_samples_split:
        type: int
        default: 5
        description: "Minimum samples required to split a node"

    command: >
      python heart_disease_mlproject.py
      --data_path {data_path}
      --model_type {model_type}
      --test_size {test_size}
      --random_state {random_state}
      --n_estimators {n_estimators}
      --max_depth {max_depth}
      --min_samples_split {min_samples_split}
